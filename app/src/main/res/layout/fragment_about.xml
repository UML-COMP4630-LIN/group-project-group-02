<!-- res/layout/fragment_about.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About the App"
        android:textSize="24sp"
        android:textColor="@color/text"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/about_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This app is designed to help users find food options near them. We provide a user-friendly interface with various categories of food items and help you discover new places to dine and order food from."
        android:textSize="16sp"
        android:textColor="@color/text"
        android:lineSpacingExtra="4dp"/>

</LinearLayout>
